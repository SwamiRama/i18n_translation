<fieldset>
  <legend>Filter</legend>
  <%= form_tag(params, method: :get, class: 'form') do %>
  <%= hidden_field_tag(:filter, params[:filter]) %>
  <%= hidden_field_tag(:sort_by, params[:sort_by]) %>

  <div class="form-group">
    <%= render 'key_filter' %>
  </div>
  <div class="form-group">
    <%= render 'text_filter' %>
  </div>
  <div class="form-group">
    <%= render 'translate_text_filter' %>
  </div>
  <div class="form-group">
    <%= submit_tag "Search" %>
    <%= sanitize link_to "clear", params.merge({text_pattern: nil, translated_text_pattern: nil, key_pattern: nil}) %>
  </div>
  <% end %>
  <div class="hits">
    Found
    <strong><%= @total_entries %></strong>
    messages
  </div>
  <div>
    <%= link_to "Reload messages", translate_reload_path %>
  </div>
</fieldset>
